{
  "name": "@simpledigicreds/server",
  "version": "0.0.1",
  "exports": "./src/index.ts",
  "imports": {
    "@std/encoding": "jsr:@std/encoding@^1.0.6"
  },
  "tasks": {
    "test": "deno test -A src/",
    "test:watch": "deno test -A --watch src/",
    "build": {
      "command": "deno run -A build_npm.ts",
      "dependencies": [
        "test"
      ]
    },
    "publish": {
      "command": "deno task publish:jsr && deno task publish:npm",
      "dependencies": [
        "build"
      ]
    },
    "publish:jsr": "deno publish --allow-slow-types",
    "publish:npm": "(cd npm; npm publish)"
  },
  "fmt": {
    "lineWidth": 100,
    "singleQuote": true
  },
  "publish": {
    "include": [
      "README.md",
      "LICENSE.md",
      "./src/**/*.ts"
    ],
    "exclude": [
      "./src/**/*.test.ts",
      "./npm"
    ]
  }
}
